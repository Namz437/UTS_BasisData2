<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-outline-primary btn-sm"
        data-toggle="modal"
        data-target="#add-modal"
      >
        Tambah Pemain
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead class="table-dark text-white">
            <tr>
              <th>No</th>
              <th>Nama</th>
              <th>No_Punggung</th>
              <th>Posisi</th>
              <th>Foto</th>
              <th>Klub</th>
              <th>Tanggal_Naturalisasi</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < timnas.length; i++){ %>
            <tr>
              <td><%= i +1 %></td>
              <td><%= timnas[i].nama %></td>
              <td><%= timnas[i].no_punggung %></td>
              <td><%= timnas[i].posisi %></td>
              <td>
                <img
                src="<%= timnas[i].gambar %>"
                alt="Pemain"
                class="image"
                width="100"
                />
              </td>
              <td><%= timnas[i].klub %></td>
              <td><%= timnas[i].tanggal_naturalisasi %></td>
              <td class="text-center">
                <form action="/timnas/<%= timnas[i].id %>?_method=DELETE" method="POST">
                <a
                href="javascript:void()"
                class="btn btn-outline-warning btn-sm button-update"
                data-id="<%= timnas[i].id %>"
                data-nama="<%= timnas[i].nama %>"
                data-no_punggung="<%= timnas[i].no_punggung %>"
                data-posisi="<%= timnas[i].posisi %>"
                data-foto="<%= timnas[i].foto %>"
                data-klub="<%= timnas[i].klub %>"
                data-tanggal_naturalisasi="<%= timnas[i].tanggal_naturalisasi %>"
                >Edit</a>
                <a 
                href="/timnas/<%= timnas[i]._id %>" 
                class="btn btn-outline-info btn-sm button-view" 
               >View</a
               >
                <button type="submit" class="btn btn-outline-danger btn-sm"
                onclick="return confirm('Apa kamu yakin ingin menghapus data pemain ini?');"
                >
                  Delete
                </button>
            </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
</div>
<p>
    <a href="/homepage" class="btn btn-secondary">Homepage</a>
  </p>