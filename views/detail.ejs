<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card mt-4">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detail Pemain Timnas</h4>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="gambar" class="text-muted">Foto:</label>
              <img src="/uploads/<%= timnas.gambar %>" class="img-fluid" alt="Gambar Pemain">
            </div>
            <div class="form-group">
              <label for="nama" class="text-muted">Nama:</label>
              <p class="form-control-plaintext"><%= timnas.nama %></p>
            </div>
            <div class="form-group">
              <label for="no_punggung" class="text-muted">No_Punggung:</label>
              <p class="form-control-plaintext"><%= timnas.no_punggung %></p>
            </div>
            <div class="form-group">
              <label for="posisi" class="text-muted">Posisi:</label>
              <p class="form-control-plaintext"><%= timnas.posisi %></p>
            </div>
            <div class="form-group">
                <label for="klub" class="text-muted">Klub:</label>
                <p class="form-control-plaintext"><%= timnas.klub %></p>
              </div>
              <div class="form-group">
                <label for="tanggal_naturalisasi" class="text-muted">Tanggal_Naturalisasi:</label>
                <p class="form-control-plaintext"><%= timnas.tanggal_naturalisasi %></p>
              </div>
          </div>
          <div class="card-footer text-right bg-light">
            <p>
            <a href="/timnas" class="btn btn-secondary">Kembali</a>
          </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    .container {
      margin-top: 20px;
    }
  
    .card {
      border: none;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
  
    .card-header {
      background-color: #000000;
      color: #fff;
      padding: 12px;
    }
  
    .card-title {
      margin: 0;
      font-size: 20px;
      font-weight: bold;
    }
  
    .card-body {
      padding: 20px;
    }
  
    .form-group label {
      font-weight: bold;
      margin-bottom: 5px;
    }
  
    .form-control-plaintext {
      background-color: #f8f9fa;
      border: none;
      padding: 0.375rem 0.75rem;
      margin-bottom: 0;
      font-size: 1rem;
      line-height: 1.5;
      color: #6c757d;
      word-break: break-word;
    }
  
    img {
      max-width: 100%;
      height: auto;
      display: block;
      margin-bottom: 10px;
    }
  
  
    .btn-secondary:hover {
      background-color: #545b62;
      border-color: #545b62;
    }
  </style>